<div class='auth_holder'>
  <div class='header_section'>
    <span class='left_action'>
      <%= link_to user_deal_path(@user,@deal), class:'back_button_link' do%>
        <%= image_tag 'icons8_back_left', class:'back_button_icon' %>
      <% end %>
    </span>
    <span class='header_header'>
      DEALS
    </span>
    <span class='right_action'>
      <%= image_tag 'icons8_search', class: 'search_icon' %>
    </span>
  </div>

  <h2 class='long_auth_header'>
    Update Deal
  </h2>

  <%= form_with model: @deal, url: user_deal_path(@user, @deal), scope: 'transaction',method: :patch do |form| %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :amount %><br>
    <%= form.number_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit "Update", class: 'button' %>
  </div>
  <% end %>
</div>
